<config>
    <sections>
        <jqueryupdate translate="label" module="jqueryupdate">
            <label>JQuery Update</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
                <jqueryui_front_settings translate="label">
                    <label>jQuery UI Front-End Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>  
					 <fields>
					 	<jquery_ui_front translate="label">
                            <label>jQuery UI</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jquery_ui_front>
                        <jquery_ui_theme_front translate="label">
                            <label>jQuery UI Theme</label>
                            <frontend_type>select</frontend_type>
                            <source_model>jqueryupdate_adminhtml/system_config_source_uithemes</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><load_jquery_ui_front>1</load_jquery_ui_front></depends>
                        </jquery_ui_theme_front>                        
                    </fields>
                </jqueryui_front_settings>
                <jqueryui_back_settings translate="label">
                    <label>jQuery UI Back-End Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>  
					 <fields>
					 	<jquery_ui_back translate="label">
                            <label>jQuery UI</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jquery_ui_back>
                    </fields>
                </jqueryui_back_settings>
			</groups>
        </jqueryupdate>
    </sections>
</config>